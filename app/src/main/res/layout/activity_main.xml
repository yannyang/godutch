<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_main"
    android:id="@+id/layMainLayout">
<include layout="@layout/activity_top" android:id="@+id/layTopBox"/>
    <include layout="@layout/activity_bottom" android:id="@+id/layBottomBox" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_main_body"
        android:layout_below="@id/layTopBox"
        android:layout_above="@id/layBottomBox"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>
